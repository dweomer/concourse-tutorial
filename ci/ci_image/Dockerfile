FROM ubuntu:16.10

RUN apt-get update && \
  apt-get install -y git zip unzip curl wget zlib1g-dev libxml2 dirmngr && \
  apt-get clean

RUN gpg --keyserver hkp://keys.gnupg.net \
  --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3 && \
  \curl -sSL https://get.rvm.io | bash -s stable

ENV PATH /usr/local/rvm/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
RUN /bin/bash -l -c "rvm install 2.2.4"
RUN /bin/bash -l -c "rvm use 2.2.4 --default"

COPY gemrc /root/.gemrc
RUN /bin/bash -l -c "rvm 2.2.4 do gem install bosh_cli -v 1.2968.0"

RUN ruby version
RUN rvm use 2.2.4
RUN ruby version
